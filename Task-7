CREATE VIEW sales_high_earners AS
SELECT empno, ename, job, sal, deptno
FROM emp
WHERE sal > 3000 AND deptno = (
  SELECT deptno FROM dept WHERE dname = 'SALES'
);

SELECT * FROM sales_high_earners;

SELECT s.ename, s.sal, d.dname
FROM sales_high_earners s
JOIN dept d ON s.deptno = d.deptno;

UPDATE sales_high_earners
SET sal = sal + 500
WHERE ename = 'ALLEN';

DROP VIEW sales_high_earners;
